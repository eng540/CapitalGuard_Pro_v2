ENV=prod
DATABASE_URL=postgresql+psycopg://USER:PASSWORD@HOST:PORT/DBNAME

# Telegram
TELEGRAM_BOT_TOKEN=123456:ABCDEF...        # توكن بوت تيليجرام
TELEGRAM_CHAT_ID=-1001234567890            # لو عندك قناة/جروب لرسائل النظام (اختياري)
TELEGRAM_ALLOWED_USERS=11111111,22222222    # IDs المصرّح لهم باستخدام البوت
TELEGRAM_WEBHOOK_URL=https://YOUR_APP_URL/webhook/telegram  # عنوان الويب هوك العلني

# API & Webhooks
API_KEY=your-strong-api-key                 # لاستدعاءات REST
TV_WEBHOOK_SECRET=your-tradingview-secret   # إن كنت تفعل تكامل TradingView

# Observability
SENTRY_DSN=                                  # اختياري (فارغ أو رابط DSN)
CORS_ORIGINS=*                               # أو قائمة مجالات مفصولة بفواصل
METRICS_ENABLED=true